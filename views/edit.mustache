<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/newSnippet.css">
    <title>Edit Snippet</title>
  </head>
  <body>
      <h2>Edit your Snippet</h2>

      <form class="snippet" action="/snippet/{{snippet._id}}" method="post">

        <div class="">
          <label for="">Title</label>
          <input type="text" name="title" value="{{snippet.title}}">
        </div>
        <div class="">
          <label for="">Code Snippet</label>
          <textarea name="snippet" cols="50" rows="10" value="{{snippet.snippet}}"></textarea>
        </div>
        <div class="">
          <label for="">Notes</label>
          <textarea name="notes" cols="50" rows="5" value="{{snippet.notes}}"></textarea>
        </div>
        <div class="">
          <label for="">Language</label>
          <select class="" name="language">
            <option value="HTML">HTML</option>
            <option value="CSS">CSS</option>
            <option value="Javascript">Javascript</option>
          </select>
        </div>
        <div class="">
          <label for="">Tags</label>
          <input type="text" name="tags" value="{{snippet.tags}}">
        </div>
        <div class="">
          <button type="submit" name="button">Submit</button>
        </div>
      </form>
  </body>
</html>
